.sol {

  }

  .sol.white {
    background: #ffffff;
  }

  sol .content {
    display: flex;
    flex-direction: column;
    height: 38.2vh;
    padding-top: 10%;
    text-align: center;
  }

  .sol .header {
    font-size: 48rpx;
    font-weight: bold;
    margin-bottom: 16px;
    text-align: center;
  }

  .sol .sub-header {
    text-align: center;
    font-size: 28rpx;
    text-transform: uppercase;
    letter-spacing: 6rpx;
    margin-bottom: 8px;
    color: rgba(0, 0, 0, 0.75);
  }

  .sol .description {
    padding: 0 34.5%;
    text-align: center;
  }

  .sol image {
    height: 41.8vh;
  }
